{
  "name": "image-compressor-plugin",
  "version": "1.0.0",
  "description": "图片压缩工具 - 支持批量压缩、格式转换、尺寸调整，支持 JPG/PNG/WebP 格式",
  "author": {
    "name": "UniHub Team",
    "email": "team@unihub.dev",
    "url": "https://github.com/unihub"
  },
  "keywords": [
    "image",
    "compress",
    "resize",
    "webp",
    "图片压缩",
    "格式转换"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "package": "node scripts/package.js"
  },
  "unihub": {
    "id": "com.unihub.image-compressor",
    "name": "图片压缩工具",
    "icon": "https://api.iconify.design/mdi/image-size-select-actual.svg",
    "category": "tool",
    "permissions": [
      "clipboard"
    ],
    "entry": "dist/index.html"
  },
  "dependencies": {
    "browser-image-compression": "^2.0.2",
    "lucide-vue-next": "^0.562.0",
    "vue": "^3.5.13",
    "vue-sonner": "^2.0.9"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vueuse/core": "^14.1.0",
    "archiver": "^7.0.1",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.3"
  }
}
